{
  "name": "@ocaml-mcp/server",
  "version": "0.1.0",
  "description": "NPX wrapper for ocaml-mcp-server - automatically installs and runs the OCaml MCP server",
  "type": "module",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ocaml",
    "language-server",
    "development-tools",
    "npx"
  ],
  "homepage": "https://github.com/tmattio/ocaml-mcp",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tmattio/ocaml-mcp.git",
    "directory": "npx-wrapper"
  },
  "bugs": {
    "url": "https://github.com/tmattio/ocaml-mcp/issues"
  },
  "license": "ISC",
  "author": "Thibaut Mattio <thibaut.mattio@gmail.com>",
  "maintainers": [
    "Thibaut Mattio <thibaut.mattio@gmail.com>"
  ],
  "bin": {
    "ocaml-mcp-server": "./bin/ocaml-mcp-server.js"
  },
  "main": "./lib/index.js",
  "files": [
    "bin/ocaml-mcp-server.js",
    "lib/*.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:project-detector": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=project-detector.test.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepack-disabled": "npm run test && npm run lint && npm run format:check",
    "prepare": "echo 'NPX wrapper for ocaml-mcp-server ready'"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "preferGlobal": false,
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "which": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^8.0.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^15.0.0",
    "jest": "^29.0.0",
    "jest-watch-typeahead": "^2.0.0",
    "prettier": "^3.0.0"
  },
  "peerDependencies": {},
  "optionalDependencies": {},
  "bundleDependencies": false,
  "os": [
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
